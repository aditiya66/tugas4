	
	<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
	<% end %>
	
	<h2 style="text-align: center;">Gallery</h2>
	
	<div id="mantap" class="transition-enabled">
	<% @images.each do |image|%>

		<div class="box panel panel-default" >
		
		<%= link_to image_path(image.id) do %>
		<%=image_tag image.avatar.url()%>
		<%end%>

		<div class="panel-body">
		<h4><strong><%= image.title%></strong></h4>
		<hr/>
		<p>
		<%= image.descrip.truncate(20)%>
		</p>

	<%= link_to 'Edit' , edit_image_path(image.id)%>
	<%= link_to 'Remove' , image_path(image.id),method: "DELETE",data:{confirm: 'are you sure delete this data ?'} %>
	
	</div>
	</div>
	<%end%></div>
	
	

