 <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<div class="container">

<%= form_for @image, url: image_path, html: { multipart: true } do |form| %>
<div class="form-group">
<%= form.label :avatar , :class => 'control-label col-sm-2'%>
<div class="col-sm-10">
	
  <%= form.file_field :avatar %>
</div>
</div>

<div class="form-group">

  <%= form.label :title ,:class => 'control-label col-sm-2'%>

 <div class="col-sm-10">
  <%= form.text_field :title %>
  <br/>
</div>
</div>

  <div class="form-group">

  <%= form.label 'Deskripsi' ,:class => 'control-label col-sm-2'%>
 

<div class="col-sm-10">
  <%= form.text_area :descrip%>
  <br/>
  </div>
  </div>
        <div class="col-sm-offset-2 col-sm-10">
 <%= form.submit  'Upload' ,:class => 'btn btn-default' %>
 </div>
<% end %>
</div>